package components

templ Input(Name string, Label string, Placeholder string, Type string, Errors map[string]string, Value string) {
	<div>
		if Label != "" {
			<label
				class="block text-sm font-medium text-gray-700"
				for={ "form-field" + Name }
			>
				{ Label }
			</label>
		}
		if Type == "textarea" {
			<textarea
				rows="2"
				id={ "form-field-" + Name }
				class="mt-1 block w-full rounded-md border px-3 py-2 focus:border-blue-500 focus:ring-blue-500 focus:outline-none"
				name={ Name }
				placeholder={ Placeholder }
			>{ Value }</textarea>
		} else {
			<input
				id={ "form-field-" + Name }
				class="mt-1 block w-full rounded-md border px-3 py-2 focus:border-blue-500 focus:ring-blue-500 focus:outline-none"
				name={ Name }
				type={ Type }
				value={ Value }
				placeholder={ Placeholder }
			/>
		}
		if Errors[Name] != "" {
			<span
				class="mt-1 text-sm text-red-600"
			>
				{ Errors[Name] }
			</span>
		}
	</div>
}
